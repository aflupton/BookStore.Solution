@{
Layout = "_Layout";
}
<div class="container-fluid">
  <h2 class="display-4">Update a customer</h2>
  <form class="col-md-6" action="/customers/@Model.GetId()/updated" method="post">
    <div class="form-group">
      <label for="customer_name">Enter Name</label>
      <input name="customer_name" type="text" class="form-control" id="customerName" placeholder="Joe Blow" value="@Model.GetName()">
    </div>
    <div class="form-group">
      <label for="customer_address">Enter Address</label>
      <input name="customer_address" type="text" class="form-control" id="customerAddress" placeholder="123 Alpha Street Minneapolis, MN" value="@Model.GetAddress()">
    </div>
    <button type="submit" class="btn btn-secondary">Update</button>
  </form>
  <hr>
</div>
