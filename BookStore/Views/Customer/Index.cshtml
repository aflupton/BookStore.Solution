@{
Layout = "_Layout";
}
<div class="container-fluid">
  <h2 class="display-4">Customers</h2>
  <hr>
  <div class="col-md-2">
    <h5><a href="/customers/new">Enter a new customer</a></h5>
    <hr>
    <h5><a href="/books/new">Buy a new book</a></h5>
    <hr>
  </div>
  <div class="row">
    <div class="col-md-6">
      @if(Model.Count != 0)
      {
        <ul class="list-group">
          @foreach(var customer in Model)
          {
            <li class="list-group-item">
              <table class="table">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Customer ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th><a href="/customers/@customer.GetId()">@customer.GetId()</a></th>
                    <td>@customer.GetName()</td>
                    <td>@customer.GetAddress()</td>

                  </tr>
                </tbody>
              </table>
            </li>
          }
        </ul>
      }
    </div>
  </div>

</div>
