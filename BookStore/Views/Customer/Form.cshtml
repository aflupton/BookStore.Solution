@{
Layout = "_Layout";
}
<div class="container-fluid">
  <h2 class="display-4">Add a New Customer</h2>
  <form class="col-md-6" action="/customers" method="post">
    <div class="form-group">
      <label for="customer_name">Enter Name</label>
      <input name="customer_name" type="text" class="form-control" id="customerName" placeholder="Joe Blow">
    </div>
    <div class="form-group">
      <label for="customer_address">Enter Address</label>
      <input name="customer_address" type="text" class="form-control" id="customerAddress" placeholder="123 Alpha Street Minneapolis, MN">
    </div>
    <button type="submit" class="btn btn-primary">Enter</button>
  </form>
  <hr>

</div>
