@{
Layout = "_Layout";
}
<h2>Book Inventory</h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      @if(Model.Count != 0)
      {
        <ul>
          @foreach(var book in Model)
          {
            <li>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#ID</th>
                    <th scope="col"><strong>Thumbnail</strong></th>
                    <th scope="col"><strong>Author</strong></th>
                    <th scope="col"><strong>Title</strong></th>
                    <th scope="col"><strong>ISBN</strong></th>
                    <th scope="col"><strong>Publisher</strong></th>
                    <th scope="col"><strong>Price</strong></th>
                    <th scope="col"><strong>Quantity</strong></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row"><a href="/books/@book.GetId()">@book.GetId()</a></th>
                    <td><img class="img img-fluid float-left" src="@book.GetImage()" alt="thumb"></td>
                    <td>@book.GetAuthor()</td>
                    <td>@book.GetName()</td>
                    <td>@book.GetIsbn()</td>
                    <td>@book.GetPublisher()</td>
                    <td>@book.GetPrice()</td>
                    <td>@book.GetQuantity()</td>
                    <td>
                      <h5><a href="/books/new">Buy a new book</a></h5>
                      <br>
                      <h5><a href="/customers/new">Enter a new customer</a></h5>
                      <br>
                      <h5><a href="/">Return to the home page</a></h5>
                    </td>
                  </tr>
                </tbody>
              </table>
            </li>
          }
        </ul>
      }
    </div>

  </div>

</div>
